{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "skipLibCheck": true
    },
    "include": ["src", "drizzle.config.ts, prettier.config.ts"],
    "exclude": ["node_modules", "dist"]
}
